<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#F3EFEF"
    tools:context=".Activities.BodyType">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="About you"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/body"
       android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Body type"
        android:padding="15dp"

        />

    <RadioGroup
        android:id="@+id/btngroup"
        android:layout_below="@+id/body"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:background="@color/white"

        android:orientation="vertical" >

        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Thin"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Overweight"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginVertical="8dp"
            android:text="Average build"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:layout_marginVertical="8dp"
            android:text="Fit"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Jacked"
            android:textColor="@color/black"
            android:layout_marginVertical="8dp"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="A little extra"
            android:layout_marginVertical="8dp"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:textSize="14sp" />
        <RadioButton
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:text="Curvy"
            android:textColor="@color/black"
            android:buttonTint="@color/black"
            android:layout_marginVertical="8dp"
            android:textSize="14sp" />


    </RadioGroup>

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prefer not to say"
            android:textColor="#6C6868"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:buttonTint="#6C6868"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:text="This info will be visible to others"
            android:textColor="#6C6868" />

        <Button
            android:id="@+id/btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Next"
            android:textColor="@color/white"
            />


    </LinearLayout>




    </LinearLayout>

</ScrollView>