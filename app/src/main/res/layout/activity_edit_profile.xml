<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFEF"
    tools:context=".Activities.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/edition_Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/girl3"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/backing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_24"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            />


        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="photoedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/camera_alt_24"
            android:text="  Edit profile"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            />



    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/edit_username"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/edit_location"
                android:layout_below="@+id/edit_username"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="#FF00E7"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/complete_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="COMPLETE YOUR PROFILE"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/details"
                android:layout_below="@+id/complete_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="and be seen by more people"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_ios_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/stright"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/basics"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:text="  Stright, Man, Single, Monogamous"
                android:textColor="@color/black"
                android:textStyle="normal"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pronouns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/pronouns"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:text="  Add: pronouns"
                android:gravity="center_vertical"
                android:textColor="#636161"
                android:textStyle="italic"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/body_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/looks"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:text="  Add: height, body type"
                android:gravity="center_vertical"
                android:textColor="#636161"
                android:textStyle="italic"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/politics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/background"
                android:text="  Add: ethnicity, politics, language(s), \noccupation, education, religion, sign"
                android:textColor="#636161"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="center_vertical"
                android:textStyle="italic"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/smoking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/lifestyle"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:text="  Add: smoking, drinking, marijuana,diet..."
                android:textColor="#636161"
                android:gravity="center_vertical"
                android:textStyle="italic"
                />



        </RelativeLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#F3EFEF"
          android:orientation="vertical">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:layout_marginHorizontal="12dp"
              android:background="@color/white"
              android:padding="10dp">

             <RelativeLayout
                 android:id="@+id/about_me"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/aboutme"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ABOUT ME"
                     android:padding="8dp"
                     android:textColor="#636161"
                     />
                 <TextView
                     android:id="@+id/myself"
                     android:layout_below="@+id/aboutme"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="My self-summary"
android:textStyle="bold"
                     android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                     android:paddingLeft="8dp"
                     android:paddingBottom="5dp"
                     android:textColor="#000000"
                     />





             </RelativeLayout>
              <View
                  android:id="@+id/view1"
                  android:layout_below="@id/about_me"
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="#F3EFEF"
                  android:paddingVertical="10dp"
                  />

              <TextView
                  android:id="@+id/develoder"
                  android:layout_below="@+id/view1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="I am an android developer"
                  android:padding="8dp"
                  android:textSize="15sp"
                  android:textColor="@color/black"
                  />

             <TextView
                 android:layout_below="@+id/develoder"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableLeft="@drawable/blue_pencil1"
                 android:text=" EDIT"
                 android:textStyle="bold"
                 android:textSize="16sp"
                 android:textColor="#0064FF"
                 />







          </RelativeLayout>





      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3EFEF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/white"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/Aspiration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/aspiration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aspiration"

                        android:padding="8dp"
                        android:textColor="#636161"
                        />
                    <TextView
                        android:id="@+id/current_goal"
                        android:layout_below="@+id/aspiration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:text="Current goal"
                        android:paddingLeft="8dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />



                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_below="@id/Aspiration"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F3EFEF"
                    android:paddingVertical="10dp"
                    />

                <TextView
                    android:id="@+id/working"
                    android:layout_below="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What are you working towards right now?"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_below="@+id/working"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/blue_pencil1"
                    android:text=" EDIT"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#0064FF"
                    />







            </RelativeLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3EFEF"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/white"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/Talent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/talent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talent"
                        android:padding="8dp"
                        android:textColor="#636161"
                        />
                    <TextView
                        android:id="@+id/beat_you"
                        android:layout_below="@+id/talent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current goal"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:paddingLeft="8dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        />





                </RelativeLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_below="@id/Talent"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F3EFEF"
                    android:paddingVertical="10dp"
                    />

                <TextView
                    android:id="@+id/go_ahead"
                    android:layout_below="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What are you working towards right now?"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_below="@+id/go_ahead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/blue_pencil1"
                    android:text=" EDIT"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#0064FF"
                    />







            </RelativeLayout>






        </LinearLayout>


        
    </LinearLayout>

</ScrollView>